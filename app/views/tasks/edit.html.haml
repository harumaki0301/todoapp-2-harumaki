.title Edit Task
.container
  %ul
    - @task.errors.full_messages.each do |message|
      %li= message
  = form_with(model: @task, url: board_task_path(board_id: @board.id, id: task.id), method: 'put', local: true) do |f|
    %div
      = f.label :title, 'タスクの名前'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :title, 'タスクの期限'
    %div
      = f.date_field :deadline, class: 'date'
    %div
      = f.label :content, '説明'
    %div
      = f.text_area :content
    = f.submit 'タスクを更新', class: 'btn-primary'