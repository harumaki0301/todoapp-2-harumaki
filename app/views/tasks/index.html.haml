.title 
  = @board.name
.container
  - @tasks.each do |task|
    = link_to board_tasks_path(@board) do
      .card
        %h2.card-title= task.title
        %p.card-deadline
          期限：#{task.deadline}
        %p.card-content= task.content 
        .board_detail_actions
          .dropdown
            = image_tag 'actions.svg', class: 'dropbtn'
            .dropdown-content.mini
              = link_to '編集する', edit_board_task_path(board_id: @board.id, id: task.id)
              = link_to '削除する', board_task_path(board_id: @board.id, id: task.id), data: { method: 'delete', confirm: '本当に削除しますか'}
  = link_to new_board_task_path(@board) do
    .add-board-card
      %h2.add-board-text + Add new task